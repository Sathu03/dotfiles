[receive]
	fsckObjects = true

[transfer]
	fsckObjects = true

[rebase]
	autoSquash = true
	autoStash = true

[merge]
	conflictStyle = zdiff3

[diff]
	algorithm = histogram
	wsErrorHighlight = all

[rerere]
	enabled = true
	autoUpdate = true

[status]
	showStash = true

; [advice]
;	statusHints = false

[help]
