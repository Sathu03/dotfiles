[alias]
	s = status
	b = branch -avv
	l = log --graph --format='%C(auto)%h%d %s %C(white)(%cr)'
	ll = l --all
	lp = log --relative-date --topo-order -p
	t = log --tags --no-walk --format='%C(auto)%h%d %s %C(white)(%cr)'
